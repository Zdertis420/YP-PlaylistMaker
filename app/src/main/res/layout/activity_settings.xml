<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/settings">

    <LinearLayout
        android:id="@+id/settings_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/standard_size"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/back_to_main"
            android:layout_width="@dimen/standard_size"
            android:layout_height="match_parent"
            android:backgroundTint="@color/transparent"
            android:src="@drawable/arrow_left" />

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:text="@string/settings"
            android:textColor="@color/black"
            android:textSize="@dimen/standard_font_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/setting_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_header">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_size">

            <Button
                android:id="@+id/switch_theme_button"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_size"
                android:backgroundTint="@color/transparent"
                android:gravity="start"
                android:text="@string/dark_theme"
                android:textColor="@color/black" />

            <Switch
                android:id="@+id/switch_theme_switch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/standard_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />

            <!--        ya know wat? fuck you and your hints, i wanna use this switch    -->
        </RelativeLayout>

        <Button
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_size"
            android:backgroundTint="@color/transparent"
            android:gravity="start"
            android:text="@string/share"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/share"/>

        <Button
            android:id="@+id/support"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_size"
            android:backgroundTint="@color/transparent"
            android:gravity="start"
            android:text="@string/support"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/support"/>

        <Button
            android:id="@+id/user_agreement"
            android:layout_width="match_parent"
            android:layout_height="@dimen/standard_size"
            android:backgroundTint="@color/transparent"
            android:gravity="start"
            android:text="@string/user_agreement"
            android:textColor="@color/black"
            android:drawableEnd="@drawable/arrow_right"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
