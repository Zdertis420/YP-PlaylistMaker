<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="main_activity_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/standard_title_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/main_activity_button_color</item>
    </style>

    <style name="settings_activity_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/standard_size</item>
        <!--        <item name="android:gravity">start</item>-->
        <item name="android:backgroundTint">@color/transparent</item>
        <item name="android:textColor">@color/standard_text_color</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
        <item name="drawableTint">@color/settings_activity_icon_fill_color</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingVertical">21dp</item>
    </style>

    <style name="toolbar_style" parent="header_style">
        <item name="navigationIconTint">@color/standard_text_color</item>
    </style>

    <style name="header_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="titleTextColor">@color/standard_text_color</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="rounded_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">80dp</item>
    </style>

    <style name="track_artist_name_and_time_style">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">@color/subtext</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="additional_track_info">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">13sp</item>
        <item name="fontWeight">400</item>
        <item name="android:layout_width">124dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="outlined_box" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/box_stroke</item>
        <item name="hintTextColor">@color/hint</item>
        <item name="android:textColor">@color/standard_text_color</item>
        <item name="android:textColorHint">@color/standard_text_color</item>
    </style>

    <style name="alertDialogStyle" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/negativeButton</item>
    </style>

    <style name="positiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/unchangeable_background_main</item>
    </style>

    <style name="negativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/unchangeable_background_main</item>
    </style>

</resources>